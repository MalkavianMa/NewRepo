        //    } else {
        //        btn.setAttribute("disabled", "true");
        //    }
        //}
    }


    function setDisabled() {
        UE.getEditor('myEditor').setDisabled('fullscreen');
        disableBtn("enable");
    }


    //关闭当前页面无提示
    function closeRouteForm() {
        window.opener = null; window.open('', '_self'); window.close();
    }


   




</script>


